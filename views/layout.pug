html(lang='en', dir='ltr')
  head
  meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    meta(charset='utf-8')
    title Welcome to Electioner
    link(type='text/css', rel='stylesheet', href='/css/bootstrap.min.css')
    link(type='text/css', rel='stylesheet', href='/css/styles.css')
    link(type='text/css', rel='stylesheet', href='/css/animate.css')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
    
    // navigation bar
    .container-fluid(class='animated slideInDown')
      nav.navbar.navbar-light.navbar-expand-md.bg-light.justify-content-center          
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsingNavbar2', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
            
        // logo navbar    
        #collapsingNavbar2.navbar-collapse.collapse.justify-content-between.align-items-center.w-100
          ul.nav.navbar-nav.flex-row.justify-content-center.flex-nowrap
            li.nav-item
              a.nav-link(href='/')
                img(src='/images/temp-logo.png', style='width:50px;height:50px;border:0;')
                  
          // Center navbar        
          ul.navbar-nav.mx-auto.text-center
            li.nav-item.active
              a.nav-link(href='/') Home                
            li.nav-item
              a.nav-link(href='#') News
            li.nav-item
              a.nav-link(href='#') Parties
            li.nav-item
              a.nav-link(href='/about') About                
            li.nav-item
              a.nav-link(href='/multichain') Blockchain
            li.nav-item
              a.nav-link(href='/users/login') Login
            li.nav-item
              a.nav-link(href='/users/logout') Logout

              
          // Left QR Vote Now
          ul.nav.navbar-nav.flex-row.justify-content-center.flex-nowrap
            li.nav-item
              a.nav-link(href='#')
                img(src='/images/qr.png', style='width:50px;height:50px;border:0;')
    block content
